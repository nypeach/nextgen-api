# NextGen API Configuration
# Copy this file to .env and fill in your actual values

# Required OAuth credentials
NEXTGEN_CLIENT_ID=your_client_id_here
NEXTGEN_CLIENT_SECRET=your_client_secret_here
NEXTGEN_SITE_ID=your_site_id_here

# Optional: Custom session ID
# NEXTGEN_X_NG_SESSION_ID=your_session_id_here

# Optional: API endpoints (use defaults if not specified)
# NEXTGEN_BASE_URL=https://nativeapi.nextgen.com/nge/prod/nge-api/api
# NEXTGEN_TOKEN_URL=https://nativeapi.nextgen.com/nge/prod/nge-oauth/token
# NEXTGEN_AUTHORIZATION_URL=https://nativeapi.nextgen.com/nge/prod/nge-oauth/authorize

# Optional: OAuth settings
# NEXTGEN_GRANT_TYPE=client_credentials

# Optional: Request settings
# NEXTGEN_TIMEOUT=30
# NEXTGEN_MAX_RETRIES=3
# NEXTGEN_VERIFY_SSL=true
# NEXTGEN_FOLLOW_REDIRECTS=true

# Optional: Custom user agent
# NEXTGEN_USER_AGENT=NextGenAPI-Python/1.0.0